<?xml version="1.0" encoding="utf-8"?>
<!-- Egyszerű launch screen sötét módhoz - CSAK egy háttér szín + logó -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- CSAK egy matt háttér szín -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/launch_background_dark" />
        </shape>
    </item>

    <!-- CSAK a logó, nagyobb méretben -->
    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center">
        <bitmap
            android:gravity="center"
            android:src="@drawable/launch_image" />
    </item>
</layer-list>
